<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutCat"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/category_background1">

    <ImageView
        android:id="@+id/img_category_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/cat_1">

    </ImageView>

    <TextView
        android:id="@+id/txt_category_name_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_category_item"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:minLines="2"
        android:text="title"
        android:textAlignment="center"
        android:textColor="#6e6e70"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>