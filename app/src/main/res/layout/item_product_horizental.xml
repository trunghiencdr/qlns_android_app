<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        android:elevation="2dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/txt_product_sale_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/secondary_red"
                        android:text="Sales 20% off"
                        android:textColor="@color/white">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_product_item"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/blue_200"
                        android:scaleType="centerInside"
                        android:src="@drawable/burger" />
                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.97km"
                    android:textColor="@color/text_color"
                    android:textSize="13sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_product_name_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Râu - Gà rán pizza và Trà sữa, Olong, Nước ngọt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/star_rating" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="4.5 sao"
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_product_price_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45.000đ"
                        android:textAlignment="viewEnd"
                        tools:ignore="RtlCompat"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:textAlignment="center"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:id="@+id/btn_add_product_item"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#9770EFBC"
                            android:text="Thêm"
                            android:textColor="#0A855A"
                            android:textStyle="bold">

                        </TextView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>