<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
       android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        android:elevation="5dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/txt_product_sale_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/secondary_red"
                        android:text="Sales 20% off"
                        android:textColor="@color/white">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_product_item"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@color/blue_200"
                        android:scaleType="centerInside"
                        android:src="@drawable/burger" />
                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="0.97km"
                    android:textColor="@color/text_color"
                    android:textSize="13sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_product_name_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:text="3 Râu - Gà rán pizza và Trà sữa, Olong, Nước ngọt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/star_rating" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="10dp"
                        android:text="4.5 sao"
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_product_price_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="45.000đ"
                        android:textAlignment="viewEnd"
                        tools:ignore="RtlCompat"></TextView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:textAlignment="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:id="@+id/btn_add_product_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#9770EFBC"
                        android:text="Thêm"
                        android:textColor="#0A855A"
                        android:textStyle="bold">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>