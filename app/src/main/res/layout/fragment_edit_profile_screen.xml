<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <ImageView
                android:id="@+id/btn_back_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/previous_2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="EDIT PROFILE"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_color">

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <com.google.android.material.card.MaterialCardView

                            android:id="@+id/cardview_img_avt_profile_screen"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardCornerRadius="100dp"
                            app:strokeColor="@color/color_secondary_blue_variant_darker"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:src="@drawable/user_icon"
                                android:id="@+id/img_avt_edit_profile_screen"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                               >

                            </ImageView>

                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="100dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/btn_choose_image_avt_edit_profile"
                            style="@style/TextViewButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/camera">

                        </TextView>
                    </RelativeLayout>





                </RelativeLayout>



                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_name_edit_profile"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"

                        android:hint="Name"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="@dimen/edit_text_radius"
                        app:boxCornerRadiusBottomStart="@dimen/edit_text_radius"
                        app:boxCornerRadiusTopEnd="@dimen/edit_text_radius"
                        app:boxCornerRadiusTopStart="@dimen/edit_text_radius"
                        app:boxStrokeWidth="1dp"
                        app:hintEnabled="true"
                        app:startIconCheckable="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_name_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Arina Hashimoto"
                            android:inputType="textEmailAddress">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_email_edit_profile"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Email"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="@dimen/edit_text_radius"
                        app:boxCornerRadiusBottomStart="@dimen/edit_text_radius"
                        app:boxCornerRadiusTopEnd="@dimen/edit_text_radius"
                        app:boxCornerRadiusTopStart="@dimen/edit_text_radius"
                        app:boxStrokeWidth="1dp"
                        app:hintEnabled="true"
                        app:startIconCheckable="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_email_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="abc@gmail.com"
                            android:inputType="textEmailAddress">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_address_edit_profile"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Address"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="@dimen/edit_text_radius"
                        app:boxCornerRadiusBottomStart="@dimen/edit_text_radius"
                        app:boxCornerRadiusTopEnd="@dimen/edit_text_radius"
                        app:boxCornerRadiusTopStart="@dimen/edit_text_radius"
                        app:boxStrokeWidth="1dp"
                        app:hintEnabled="true"
                        app:startIconCheckable="true">

                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/edit_text_address_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="97 Man Thiá»‡n"
                            android:inputType="textEmailAddress">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:layout_margin="50dp"
                        android:id="@+id/btn_save_edit_profile"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        style="@style/TextViewButton"
                        android:layout_gravity="center"
                        android:text="Save"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>






            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>
